{
    "name": "uav_sim",
    "image": "uav_sim:latest",
    "remoteUser": "karlikp",
    "runArgs": [
        "--network=host",
        "--ipc=host",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        // "--gpus=all",
        "--privileged"
    ],
    "workspaceMount": "source=${localWorkspaceFolder}/,target=/home/karlikp/ws/src/uav_sim,type=bind,consistency=cached",
    "workspaceFolder": "/home/karlikp/ws/src/uav_sim",
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "ROS_DOMAIN_ID": "0",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-iot.vscode-ros",
                "twxs.cmake",
                "ms-vscode.cpptools-extension-pack",
                "vivaxy.vscode-conventional-commits"
            ]
        }
    },
    "onCreateCommand": "./scripts/build.sh ../.. --symlink-install"

}