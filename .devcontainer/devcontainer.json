{
    "name": "dron_sim",
    "image": "dron_sim",

    "remoteUser": "karol",
    "runArgs": [
        "--network=host",
        "--ipc=host",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "--gpus=all",
        "--privileged",
        "--device=/dev/dri",
        "--device=/dev/dri/renderD128",
        "--device=/dev/dri/card0",
        "--device=/dev/dri/card1",
        "--group-add=video",
        "--volume=/home/karol/.gz:/home/karol/.gz",
        "--volume=${localWorkspaceFolder}/.qgc-config:/home/karol/.config/QGroundControl:rw"
    ],
  
    "workspaceMount": "source=${localWorkspaceFolder}/,target=/home/karol/ws,type=bind,consistency=cached",
    "workspaceFolder": "/home/karol/ws",


    "containerEnv": {
        "GZ_SIM_RESOURCE_PATH": "${containerEnv:GZ_SIM_RESOURCE_PATH}:/home/karol/ws/src/sim_bringup/models",
        "XDG_RUNTIME_DIR": "/tmp/xdg-runtime-dir-1000",
        "DISPLAY": "${localEnv:DISPLAY}",
        "ROS_DOMAIN_ID": "0",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
    
    "postStartCommand": "mkdir -p /home/karol/.config/QGroundControl && chown -R karol:karol /home/karol/.config/QGroundControl && chmod -R u+rwX /home/karol/.config/QGroundControl && chmod -R a+rw /home/karol/ws/src/sim_bringup/worlds || true",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-iot.vscode-ros",
                "twxs.cmake",
                "ms-vscode.cpptools-extension-pack",
                "vivaxy.vscode-conventional-commits"
            ]
        }
    }
}